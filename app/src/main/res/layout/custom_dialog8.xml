<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/copy_dialogb4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/museosans700"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#201b4f"
            android:text="Tumalog Falls" />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager2"
            android:layout_width="530dp"
            android:layout_height="335dp"
            tools:ignore="SpeakableTextPresentCheck">
        </androidx.viewpager.widget.ViewPager>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/museosans700"
                android:paddingTop="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="7dp"
                android:textSize="10sp"
                android:textColor="#201b4f"
                android:text="Tumalog Falls lies within the Municipality of Oslob in Cebu. Despite its relatively recent discovery in 2012, Tumalog Falls has quickly become a popular tourist destination. The falls cascade down a series of moss-covered rocks from a height of 100 meters into a large turquoise pool of water. It is best visited during the dry season when the waters are safest." />

        </ScrollView>
    </LinearLayout>
</LinearLayout>
